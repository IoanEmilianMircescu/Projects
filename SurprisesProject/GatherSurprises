package surprises;

import java.util.Random;

public final class GatherSurprises {  
	private static final Random random = new Random();
	
	private GatherSurprises() { 
	}
	
	public static ISurprise[] gather(int n) {	
		ISurprise[] diverseSurprises = new ISurprise[n];
		for (int i = 0; i < n; i++) {
			diverseSurprises[i] = gather();
		}
		return diverseSurprises;
	}
	
	public static ISurprise gather() {
		int surpriseType = random.nextInt(3); // 0 for FortuneCookie, 1 for Candy, 2 for MinionToy;
		switch(surpriseType) {
			case 0:
				return FortuneCookie.generate();
			case 1:
				return Candy.generate();
			case 2:
				return MinionToy.generate();
			default:
				return null;
		}
	}
}

package surprises;

import java.util.ArrayList;
import java.util.Random;

public class RandomBag implements IBag {
	private ArrayList<ISurprise> gifts = new ArrayList<ISurprise>();
	private static final Random random = new Random();
	
	@Override
	public void put(ISurprise newSurprise) {
		gifts.add(newSurprise);
	}

	@Override
	public void put(IBag bagOfSurprises) {
		int bagSize = bagOfSurprises.size();
		for (int i = 0; i < bagSize; i++) {
			gifts.add(bagOfSurprises.takeOut()); 
		} 
	}

	@Override
	public ISurprise takeOut() { 
		if (isEmpty()) {
			System.out.println("This bag has no gifts!");
			return null;
		}
		int indexToRemove = random.nextInt(gifts.size()); 
		return gifts.remove(indexToRemove);							 		
	}

	@Override
	public boolean isEmpty() {
		return (gifts.size() == 0) ? true : false;
	}

	@Override
	public int size() {
		return gifts.size();
	}
}
